<Window x:Class="EditeurFichier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editeur de Texte Simple" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="166*"/>
            <ColumnDefinition Width="351*"/>
        </Grid.ColumnDefinitions>
        <TextBox Height="269" HorizontalAlignment="Left" Name="editeur" VerticalAlignment="Top" Width="503" AcceptsReturn="True" Grid.ColumnSpan="2" TextChanged="editeur_TextChanged"/>
        <Button Content="Ouvrir" Height="29" HorizontalAlignment="Left" Margin="0,270,0,0" Name="boutonOuvrir" VerticalAlignment="Top" Width="96" Click="BoutonOuvrir_Click" />
        <Button Content="Enregistrer" Height="29" HorizontalAlignment="Left" Margin="102,270,0,0" Name="boutonEnregistrer" VerticalAlignment="Top" Width="96" Click="BoutonEnregistrer_Click" Grid.ColumnSpan="2" />
    </Grid>
</Window>
